{
    "$schema": "https://cdn.jsdelivr.net/npm/@elgato/schemas@0.1.0/streamdeck/plugins/manifest.json",
    "Name": "cal",
    "Version": "0.1.0",
    "Author": "Isaac",
    "Actions": [
        {
            "Name": "Next event",
            "UUID": "com.isaac.cal.next",
            "Icon": "imgs/actions/counter/icon",
            "Tooltip": "Shows next calendar event",
            "Controllers": [
                "Keypad"
            ],
            "States": [
                {
                    "Image": "imgs/Black",
                    "TitleAlignment": "middle",
                    "FontSize": 12,
                    "ShowTitle": true
                }
            ]
        },
        {
            "Name": "Current event",
            "UUID": "com.isaac.cal.current",
            "Icon": "imgs/actions/counter/icon",
            "Tooltip": "Shows next calendar event",
            "Controllers": [
                "Keypad"
            ],
            "States": [
                {
                    "Image": "imgs/Black",
                    "TitleAlignment": "middle",
                    "FontSize": 16,
                    "ShowTitle": true
                }
            ]
        }
    ],
    "Category": "cal",
    "CategoryIcon": "imgs/plugin/category-icon",
    "CodePath": "bin/plugin.js",
    "Description": "pulls from mac cal",
    "Icon": "imgs/plugin/marketplace",
    "SDKVersion": 2,
    "Software": {
        "MinimumVersion": "6.5"
    },
    "OS": [
        {
            "Platform": "mac",
            "MinimumVersion": "10.15"
        }
    ],
    "Nodejs": {
        "Version": "20",
        "Debug": "enabled"
    },
    "UUID": "com.isaac.cal"
}